      font-size: 3rem;
      margin-bottom: 1rem;
      letter-spacing: 2px;
    }

    .coming-soon-container p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      color: #ccc;
    }

    /* Countdown section */
    .countdown {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    .countdown-item {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .countdown-item span:first-child {
      font-family: 'Orbitron', sans-serif; /* Digital clock style font */
